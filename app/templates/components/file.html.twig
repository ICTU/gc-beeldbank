<div class="file file--type-{{ file.type }}" data-type="{{ file.type }}">


  <div class="file__content">

    {% if file.type == 'img' %}

      {% set path = file.path %}

      {% if file.thumb %}
        {% set path = file.thumb.path %}
      {% endif %}

      <img src="{{ path }}">

    {% elseif file.type == 'eps' or file.type == 'pdf' %}
      <div class="file__type">{{ file.type }}</div>
      <div class="file__type-descr">Voor drukwerk</div>
    {% endif %}

  </div>

  <div class="file__info">
    <h3 class="file__title"> {{ file.name }}</h3>

    <a class="link link--download" target="_blank" href="{{ file.path }}">
      <span class="link__text">Download bestand</span>
    </a>


    <div class="l-meta">
      <dl class="meta-data">
        <dt>Grootte:</dt>
        <dd>{{ file.size }}</dd>

        {% if file.dimensions %}
          <dt>Formaat:</dt>
          <dd>{{ file.dimensions.width }}px x {{ file.dimensions.height }}px</dd>
        {% endif %}
      </dl>

      {% if file.descr %}
        <span class="file__descr">{{ file.descr }}</span>
      {% endif %}
    </div>
  </div>
</div>