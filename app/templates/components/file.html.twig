<div class="file file--type-{{ file.type }}">


  <div class="file__content">

    {% if file.type == 'img' %}

      {% if file.thumb %}
        {% set path = file.thumb.path %}
      {% else %}
        {% set path = file.path %}
      {% endif %}

      <img src="{{ path }}">

    {% endif %}

  </div>

  <div class="file__info">

    <h3 class="file__title"> {{ file.name }}</h3>

    <a class="link link--download" target="_blank" href="{{ file.path }}">Download bestand</a>


    <div class="l-meta">
      <dl class="meta-data">
        <dt>Grootte:</dt>
        <dd>{{ file.size }}</dd>

        {% if file.dimensions %}
          <dt>Formaat:</dt>
          <dd>{{ file.dimensions.width }}px x {{ file.dimensions.height }}px</dd>
        {% endif %}
      </dl>

      {% if file.descr %}
        <span class="file__descr">{{ file.descr }}</span>
      {% endif %}
    </div>
  </div>
</div>